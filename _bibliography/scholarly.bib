	author = {Fox, Sharon E. and Akmatbekov, Aibek and Harbert, Jack L. and Li, Guang and Brown, J. Quincy and Heide, Richard S. Vander},
	month = may,
	year = {2020},
	pmid = {32473124},
	note = {Publisher: Elsevier},
	pages = {1--6},
	file = {Full Text PDF:/Users/alex/Zotero/storage/7897TTRW/Fox et al. - 2020 - Pulmonary and cardiac pathology in African America.pdf:application/pdf;Snapshot:/Users/alex/Zotero/storage/5DWZ6QN2/fulltext.html:text/html}
